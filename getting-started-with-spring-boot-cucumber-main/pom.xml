<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.app.hpx</groupId>
        <artifactId>getting-started-with-spring-boot-cucumber</artifactId>
        <version>0.0.1-SNAPSHOT</version>
    </parent>

    <packaging>jar</packaging>

    <artifactId>getting-started-with-spring-boot-cucumber-main</artifactId>
    <version>0.0.1-SNAPSHOT</version>

    <name>getting-started-with-spring-boot-cucumber-main</name>
    <description>Getting Started with Cucumber BDD Testing for Spring Boot Application - Main Module</description>

    <properties>
        <java.version>1.8</java.version>
        <interface.version>0.0.1-SNAPSHOT</interface.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-configuration-processor</artifactId>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>

        <!--Using Interface Objects that are standard across the domain -->
        <dependency>
            <groupId>com.app.hpx</groupId>
            <artifactId>getting-started-with-spring-boot-cucumber-interface</artifactId>
            <version>${interface.version}</version>
            <scope>compile</scope>
        </dependency>

    </dependencies>
</project>
